#!/bin/bash
. bin/db.inc
TMPFILE=/tmp/hard_cache.$$

mkdir -p web/synthesetri
for url in synthese synthesetri/10 synthesetri/11 synthesetri/12 synthesetri/1 synthesetri/2 synthesetri/3 synthesetri/4 synthesetri/5 synthesetri/6 synthesetri/7 synthesetri/8 synthesetri/9;
do 
  rm web/$url.html
  curl --max-time 90 "http://$VHOST/$url?_sf_ignore_cache=$$" > $TMPFILE 2>> /tmp/update_curl_output.txt
  mv $TMPFILE web/$url.html
done;

mkdir -p web/$LEGISLATURE/seance
for seance_id in $(echo "select DISTINCT seance_id from intervention where updated_at > SUBTIME(NOW(),'4:0:0')" | mysql $MYSQLID $DBNAME | grep -v seance_id )
do
	echo "http://$VHOST/$LEGISLATURE/seance/$seance_id"
	rm web/$LEGISLATURE/seance/$seance_id.html 2> /dev/null
	curl -q "http://$VHOST/$LEGISLATURE/seance/$seance_id?_sf_ignore_cache=$$" > $TMPFILE
	mv $TMPFILE web/$LEGISLATURE/seance/$seance_id.html
done
rm -f cache/frontend/prod/template/*/all/intervention/seance/seance/*
rm -f cache/frontend/prod/template/*/all/sf_cache_partial/plot/__groupes/sf_cache_key/*

